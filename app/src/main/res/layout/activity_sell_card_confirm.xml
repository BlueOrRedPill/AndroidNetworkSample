<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_content">
    <include layout="@layout/toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_10"
            android:orientation="vertical">

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center">
            <ImageView
                    android:id="@+id/img_card"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ex_collection_7"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_margin="@dimen/size_10"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp"
                android:layout_weight="4"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_white_corner"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_15"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginEnd="@dimen/size_20"
                    android:layout_gravity="center_horizontal">

                <LinearLayout
                        android:id="@+id/sell_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/size_20"
                        android:background="@color/black_30">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Card:"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="BUAKAW BANCHAMEK"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Price:"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="1000 EXS"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Quantity:"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="2"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Service Fee:"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="50 exs"
                                android:fontFamily="@font/opensans_regular"
                                android:textSize="@dimen/text_12"
                                android:textColor="@color/white_50"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="You'll Earn:"
                                android:fontFamily="@font/opensans_bold"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="end|center_vertical"
                                android:text="950 EXS"
                                android:fontFamily="@font/opensans_bold"
                                android:textSize="@dimen/text_12"
                                android:textColor="@android:color/white"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/size_20">
                    <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Do you really want to sell this card ?"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_bold"
                            android:textSize="@dimen/text_14"/>
                    <TextView
                            android:id="@+id/message_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_12"
                            android:fontFamily="@font/opensans_regular"/>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/confirm_btn"
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/bg_red_corner"
                        android:layout_margin="@dimen/size_15"
                        android:padding="@dimen/size_10"
                        android:gravity="center">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:text="CONFIRM"
                            android:textSize="@dimen/text_14"
                            android:padding="@dimen/size_05"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/opensans_bold"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>